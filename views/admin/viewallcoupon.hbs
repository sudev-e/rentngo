<script>
    function deleteCoupon(couponcode){
        $.ajax({
            url:'/admin/deletecoupon',
            method:'get',
            data:{couponcode},
            success:(Response)=>{
                if(Response.updated){
                    window.location.reload()
                }
            }
        })
    }
</script>
